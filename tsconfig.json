{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["es2016", "dom"],
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*"
  ]
}
